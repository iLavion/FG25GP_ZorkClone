{
    "version": 8,
    "configurePresets": [
        {
            "name": "clang20-amd64-debug",
            "displayName": "Clang 20.1.8 amd64 Debug",
            "description": "Using Clang from Visual Studio",
            "binaryDir": "${sourceDir}/out/build/${presetName}",
            "cacheVariables": {
                "CMAKE_CXX_STANDARD": "20",
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/out/install/${presetName}",
                "CMAKE_BUILD_TYPE": "Debug"
            }
        }
    ]
}